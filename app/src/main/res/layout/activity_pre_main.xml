<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app" />

        <Button
            android:id="@+id/joinButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="137dp"
            android:layout_height="60dp"


            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="356dp"
            android:layout_marginEnd="228dp"
            android:layout_marginRight="228dp"

            android:text="נוסע"
            android:background="#9FBC9797"
            android:textColor="@color/white"
            app:rippleColor="#8E4FFF"
            app:strokeColor="#9FFFFFFF"
            app:backgroundTint="#27FFFFFF"
            app:iconTint="#F0CF2828"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:textSize="29sp"/>

        <Button
            android:id="@+id/driverButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="137dp"
            android:layout_height="60dp"
            android:layout_marginTop="359dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:background="#56FFFFFF"
            android:text="נהג"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="29sp"
            app:backgroundTint="#27FFFFFF"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#FFFFFF"
            app:strokeColor="#9FFFFFFF" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="26dp"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

     <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="191dp"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>